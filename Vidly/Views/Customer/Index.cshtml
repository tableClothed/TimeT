@model IEnumerable<Vidly.Models.Customer>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers</h2>
@if (!Model.Any())
{
    <p> Nie mamy jeszcze żadnego klienta.</p>
}
else
{
    <table id ="customers" class="table">
        <thead>
            <tr>
                <th>Customers</th>
                <th>Discount Name</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @*@foreach (var a in Model)
            {
                <tr>
                    <td>@Html.ActionLink(a.Name, "Edit", "Customer", new { id = a.ID }, null)</td>
                    <td>@a.MembershipType.Name</td>
                    <td><button data-customer-id ="@a.ID" class="btn-link js-delete"> Delete </button></td>
                </tr>
            }*@
        </tbody>

    </table>

}

@section scripts
{
    <script>
        $("document").ready(function () {
            $("#customers").DataTable({
                ajax: {
                    url: "/api/customer",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "name",
                        render: function (data, type, customer) {
                            return "<a href='/customer/edit/" + customer.id + "'>" + customer.name + "</a>";
                        }
                    },
                    {
                        data: "name"
                    },
                    {
                        data: "id",
                        render: function (data) {
                            return "<button class='btn-link js-delete' data-customer-id=" + data + ">Delete</button>";
                        }
                    }

                ]
            });
        });


        $("document").ready(function () {

            $("#customers").DataTable();

            $("#customers").on("click", " .js-delete", function () {
                var button = $(this);

                bootbox.confirm("Are you sure you want to delete this customer?", function (result) {
                    if (result) {
                        $.ajax({
                            url: "/api/customer" + $(this).attr("data-customer-id"),
                            method: "DELETE",
                            success: function () {
                                button.parents("tr").remove();
                            }
                        });
                    }
            });
        });
        });
    </script>

}